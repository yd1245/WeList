@model IEnumerable<WeList.Models.Locale>
@{
    ViewBag.Title = "AreaDetail";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";

}
<section class="section">
    <h2 class="title">Manage Area Detail</h2>
    <h3 class="subtitle"> @ViewData["area"].ToString()</h3>

    <div class="block">
        <nav class="level">
            <div class="level-left">
                <div class="level-item"><a href="@Url.Action("LocaleCreate")" class="button">Create A New Locale</a></div>
                <div class="level-item"><a href="@Url.Action("AdminArea")" class="button">Back to Area List</a></div>
            </div>
            @using (Html.BeginForm("AdminSearch", "Admin", FormMethod.Get))
            {
                <div class="level-right">
                    <div class="level-item">
                        <div class="control">
                            <input name="keyword" class="input" type="text" placeholder="Enter key word here">
                        </div>

                        <div class="control">
                            <input type="submit" value="Search" class="button is-info">
                        </div>
                    </div>
                </div>
            }
        </nav>
    </div>
    <div>
        <table class="table is-striped is-fullwidth">
            <thead>
                <tr class="is-selected">
                    <th>Lcale ID</th>
                    <th>Locale Name</th>
                    <th>Locale Slug</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Slug)</td>
                        <td><a href="@Url.Action("LocaleEdit", new { localeID = item.Id})" class="button">Edit</a><a href="@Url.Action("LocaleDelete",new { localeID = item.Id})" class="button">Delete</a></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</section>