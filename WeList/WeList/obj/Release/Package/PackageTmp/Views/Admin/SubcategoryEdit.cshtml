@model WeList.Models.ModifySubcategoryViewModel
@{
    ViewBag.Title = "SubcategoryEdit";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";
    List<string> toselect = ViewData["cates"] as List<string>;
}
<section class="section">
    <h2 class="title">Edit Subcategory</h2>
    <h3 class="subtitle">@Model.Name</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        if (TempData["error"] != null)
        {
            <div class="notification is-danger">@TempData["error"]</div>
        }
        <div> @Html.ValidationSummary(true, "", new { @class = "text-danger" }) </div>
        <div class="block">
            <div class="field">
                <label class="label">Subcategory Name</label>
                @Html.EditorFor(m => Model.Name, new { htmlAttributes = new { @class = "input is-primary is-halfwidth" } })
                @Html.ValidationMessageFor(m => Model.Name)
            </div>
            <div class="field">
                <label class="label">Subcategory Name</label>
                @Html.EditorFor(m => Model.Slug, new { htmlAttributes = new { @class = "input is-primary is-halfwidth" } })
                @Html.ValidationMessageFor(m => Model.Slug)
            </div>
            <div class="field">
                <label class="label">Subcategory's Category</label>
                @Html.DropDownListFor(model => model.SelectCategory, new SelectList(toselect), new { htmlAttributes = new { @class = "dropdown button is-primary button" } })
            </div>
            <div><input type="submit" class="button" value="Edit" /> <a href="@Url.Action("CategoryEdit", new { cur = Model })" class="button text-center">Canceal</a></div>
        </div>
    }
</section>