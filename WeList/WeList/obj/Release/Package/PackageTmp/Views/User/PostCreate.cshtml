@model WeList.Models.CreatePostViewModel
@{
    ViewBag.Title = "PostCreate";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";

}

<section class="section">

    <div class="title">@ViewBag.Title</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="tile is-ancestor">
        <div class=" tile is-parent is-10 is-vertical">
            <div class="tile is-child">               
                                  
                @if (!ViewData.ModelState.IsValid)
                {
                @Html.ValidationSummary(false, "", new { @class = "notification is-danger" })
                }

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Location</label>
                    </div>
                    <div class="field-body">
                        <div class="field is-narrow">
                            @Html.DropDownListFor(model => model.LocationName, ViewData["location"] as IEnumerable<SelectListItem>,
              new { htmlAttributes = new { @class = "dropdown button is-primary button" } })
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Type</label>
                    </div>
                    <div class="field-body">
                        <div class="field is-narrow">
                            @Html.DropDownListFor(model => model.TypeName, ViewData["type"] as IEnumerable<SelectListItem>,
                                 new { htmlAttributes = new { @class = "dropdown button is-primary button" } })
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Title</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <p class="control">
                                <input class="input is-focused" type="text" name="Title" value="@Model.Title" placeholder="enter your post title">
                            </p>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Body</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <textarea class="textarea is-medium" type="text" name="Body" value="@Model.Body" placeholder="enter your post content">@Model.Body</textarea>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="field is-horizontal">
                <div class="field-label">
                    <!-- Left empty for spacing -->
                </div>
                <div class="field-body">
                    <div class="field is-grouped">
                        <p class="control">
                            <input type="submit" class="button is-info" value="Create" />

                        </p>
                        <p class="control">
                            <a class="button" href='@Url.Action("PostList", "User")'>
                                Cancel
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
      }
                
         
</section>