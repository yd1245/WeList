@model WeList.Models.ShowPostViewModel
@{
    ViewBag.Title = "Post Delete";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";
}


<section class="section">
    <div class="title">@ViewBag.Title</div>
    <div class="tile is-ancestor">
        <div class=" tile is-parent is-10 is-vertical">

            <div class="tile is-child">
                <div class="title">@Html.DisplayFor(m => m.Title)</div>
            </div>
            <div class="tile is-child">
                <div class="has-text-grey-light">Poster: @Model.Email</div>
                <div class="has-text-grey-light">Last Modified: @Model.Timestamp</div>
                <div class="has-text-grey-light">Expiration: @Model.Expiration</div>
            </div>
            <div class="tile is-child">
                <span class="tag is-primary is-medium">@Model.AreaName</span> <span class="tag is-info is-medium">@Model.LocaleName</span>
                <span class="tag is-link is-medium">@Model.CategoryName</span> <span class="tag is-warning is-medium">@Model.SubcategoryName</span>
            </div>
            <div class="tile is-child">
                <div class="block">@Model.Body</div>
            </div>

        </div>

    </div>
    <div class="field is-grouped">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <p class="control">
                <input type="submit" onclick="return confirm('Are you sure you wish to delete this post?');" value="Delete" class="button is-danger is-outlined" />
            </p>
        }
        <p class="control">
            <a class="button" href='@Url.Action("PostDetails", new { id = Model.PostId })'>
                Cancel
            </a>
        </p>

    </div>

</section>


