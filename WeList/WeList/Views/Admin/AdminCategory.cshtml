@model IEnumerable<WeList.Models.Category>
@{
    ViewBag.Title = "AdminCategory";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";
}

<section class="section">
<h2 class="title">Category Management</h2>

<div class="block">
    <nav class="level">
        <div class="level-left">
            <div class="level-item"><a href="@Url.Action("CategoryCreate")" class="button">Create New Category</a></div>
            <div class="level-item"><a href="@Url.Action("SubcategoryCreate")" class="button">Create New Subcategory</a></div>
        </div>
        @using (Html.BeginForm("AdminSearch", "Admin", FormMethod.Get))
    {
        <div class="level-right">
            <div class="level-item">
                <div class="control">
                    <input name="keyword" class="input" type="text" placeholder="Enter key word here">
                </div>

                <div class="control">
                    <input type="submit" value="Search" class="button is-info">
                </div>
            </div>
        </div>
}
    </nav>
</div>

<div>
    <table class="table is-striped is-fullwidth">
        <thead>
            <tr class="is-selected">
                <th>CategoryID</th>
                <th>Category Name</th>
                <th>Category Slug</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Slug)</td>
                    <td><a href="@Url.Action("CategoryDetail",new { cateID = item.Id})" class="button">Detail</a><a href="@Url.Action("CategoryEdit",new { cateId = item.Id})" class="button">Edit</a><a href="@Url.Action("CategoryDelete",new { cateID=item.Id})" class="button">Delete</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>

    </section>