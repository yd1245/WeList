@model WeList.Models.Locale
@{
    ViewBag.Title = "LocaleDelete";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";
}
<section class="section">
<h2 class="title">Delete Locale</h2>
<h3 class="subtitle">@Html.DisplayFor(m => m.Name)</h3>

<article class="message is-danger">
    <div class="message-header"><p>Are you sure you want to delete @Html.DisplayFor(m => m.Name) ? </p></div>
    <div class="message-body">
        Once you choose to delete the locale, all the posts belong to this area
        would be deleted at the same time.
    </div>
</article>
<div class="block">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="button is-danger text-center" /> 
            <a href="@Url.Action("AreaDetail",new { areaID = Model.AreaId})" class="button is-danger glyphicon-align-center">Cancel</a>
        </div>
    }


</div>

</section>