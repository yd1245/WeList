@model IEnumerable<WeList.Models.ShowPostViewModel>
@{
    ViewBag.Title = "AdminPosts";
    Layout = "~/Views/Shared/_bulmatemplate.cshtml";
}
<section class="section">
<h2 class="title">Posts</h2>
<div class="block">
    <nav class="level">
        <div class="level-left">        
        </div>
        @using (Html.BeginForm("AdminSearch", "Admin", FormMethod.Get))
        {
        <div class="level-right">
            <div class="level-item">
                <div class="control">
                    <input name="keyword" class="input" type="text" placeholder="Enter key word here">
                </div>

                <div class="control">
                    <input type="submit" value="Search" class="button is-info">
                </div>
            </div>
        </div>
        }
    
    </nav>
</div>

<div>
    <table class="table is-striped is-fullwidth">
        <thead>
            <tr class="is-selected">
                <th>Post ID</th>
                <th>Post Title</th>
                <th>Author</th>
                <th>Area</th>
                <th>Locale</th>
                <th>Category</th>
                <th>Subcategory</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(m => item.PostId)</td>
                <td>@Html.DisplayFor(m => item.Title)</td>
                <td>@Html.DisplayFor(m => item.Email)</td>
                <td>@Html.DisplayFor(m => item.AreaName)</td>
                <td>@Html.DisplayFor(m => item.LocaleName)</td>
                <td>@Html.DisplayFor(m => item.CategoryName)</td>
                <td>@Html.DisplayFor(m => item.SubcategoryName)</td>

                <td><a href="@Url.Action("PostDetails","User", new {id = item.PostId})" class="button">Detail</a>
                <a href="@Url.Action("PostEdit","User", new {id = item.PostId})" class="button">Edit</a>
                <a href="@Url.Action("PostDelete","User", new {id = item.PostId})" class="button">Delete</a></td>
            </tr>

            }
        </tbody>
    </table>
</div>

    </section>

